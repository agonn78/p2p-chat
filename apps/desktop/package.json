        "remark-gfm": "^4.0.1",
        "tailwind-merge": "^2.2.0",
        "tweetnacl": "^1.0.3",
        "tweetnacl-util": "^0.15.1",
        "zustand": "^5.0.10"
    },
    "devDependencies": {
        "@tauri-apps/cli": "^2.0.0-beta",
        "@types/react": "^18.2.43",
        "@types/react-dom": "^18.2.17",
        "@vitejs/plugin-react": "^4.2.1",
        "autoprefixer": "^10.4.16",
